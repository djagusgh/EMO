<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/cookie"
                                             android:layout_width="match_parent"
                                             android:layout_gravity="bottom"
                                             android:background="@color/cookie"
                                             android:gravity="center_vertical" android:layout_height="250dp">


    <ImageView
            android:layout_width="60dp"
            app:srcCompat="@drawable/warning"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:id="@+id/iv_icon"
            android:layout_alignParentBottom="true" android:layout_height="60dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"/>
    <TextView
            android:text="ALLERGY INFO"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="30dp"
            android:id="@+id/tv_title" android:textSize="22sp"
            android:textStyle="bold" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_icon" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="4dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="245dp"
            android:layout_height="26dp" android:id="@+id/tv_message"
            android:textColor="@color/default_message_color"
            android:textSize="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_icon" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:foreground="?selectableItemBackground"
            android:text="Cancel"
            android:textColor="@color/default_action_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="144dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/linearLayout" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_message">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Egg"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                    android:textSize="20sp" android:textAlignment="textStart" android:padding="4dp"
                    android:textStyle="bold" android:textColor="@color/cardview_light_background"
                    android:layout_width="53dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/eggAllergy" android:layout_weight="1"
                    android:textSize="20sp" android:textColor="@color/colorGoogleSignInPressed"
                    android:textStyle="bold" tools:text="Danger" android:textAlignment="viewStart"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Nuts"
                    android:layout_height="wrap_content" android:id="@+id/textView18" android:layout_weight="1"
                    android:textSize="20sp" android:textAlignment="viewStart" android:padding="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/browser_actions_bg_grey" android:layout_width="53dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/nutsAllergy" android:layout_weight="1"
                    android:textSize="20sp" android:textColor="@color/colorPrimary" android:textStyle="bold"
                    tools:text="Caution" android:textAlignment="viewStart"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                    android:textSize="20sp" android:textAlignment="viewStart" android:padding="4dp" android:text="Milk"
                    android:textStyle="bold" android:textColor="@color/browser_actions_bg_grey"
                    android:layout_width="53dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/milkAllergy" android:layout_weight="1"
                    android:textSize="20sp" android:textColor="@color/colorPrimary" android:textStyle="bold"
                    tools:text="Caution" android:textAlignment="viewStart"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Seafood"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="1"
                    android:textSize="20sp" android:textAlignment="viewStart" android:padding="4dp"
                    android:textStyle="bold" android:textColor="@color/browser_actions_bg_grey"
                    android:layout_width="53dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/seafoodAllergy" android:layout_weight="1"
                    android:textSize="20sp" android:textColor="@color/colorEmailSignInPressed"
                    android:textStyle="bold" tools:text="OK" android:textAlignment="viewStart"/>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>