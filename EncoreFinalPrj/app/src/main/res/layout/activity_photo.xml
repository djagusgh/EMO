<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar android:layout_height="55dp"
                                       android:layout_width="match_parent"
                                       android:id="@+id/my_toolbar2"
                                       android:theme="@style/AppTheme.ActionBar"
                                       android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                                       android:layout_marginTop="0dp" android:layout_marginStart="0dp"
                                       android:paddingBottom="3dp" android:paddingTop="3dp">
        <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/logo_titlebar"
                android:contentDescription="@string/app_name"
                tools:layout_editor_absoluteY="3dp"
                tools:layout_editor_absoluteX="16dp" android:layout_height="wrap_content"
                android:layout_marginRight="15dp" android:layout_marginLeft="5dp"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout android:layout_height="1dp"
                  android:layout_width="match_parent"
                  android:id="@+id/toolbar_division"
                  android:orientation="horizontal"
                  android:background="@color/colorDivision"
                  android:layout_marginBottom="10dp"
                  android:layout_below="@+id/my_toolbar2"/>


    <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/temp"

            android:id="@+id/photoView"

            android:layout_height="224dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0"
            android:layout_marginStart="45dp" android:layout_marginTop="85dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/my_toolbar4" android:layout_alignParentEnd="true"
            android:layout_marginEnd="45dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical" app:layout_constraintGuide_end="384dp"/>
    <TextView
            android:text="Name"
            android:layout_width="294dp"
            android:layout_height="39dp" android:layout_alignParentBottom="true" android:id="@+id/resultText"
            android:layout_marginBottom="187dp"
            android:layout_marginStart="45dp" android:textSize="20sp" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="11dp"/>
    <TextView
            android:text="Probability"
            android:layout_width="294dp"
            android:layout_height="33dp" android:layout_alignParentBottom="true" android:id="@+id/resultProbText"
            android:layout_marginBottom="139dp"
            android:layout_marginStart="45dp" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="37dp"/>
    <ImageButton
            android:layout_height="40dp" app:srcCompat="@drawable/ic_photo_camera_black_24dp"
            android:layout_alignParentStart="true" android:layout_marginStart="45dp"

            android:layout_alignParentBottom="true" android:id="@+id/retryBtn" android:layout_marginBottom="60dp"
            android:layout_width="84dp" android:background="@drawable/rounded"
            android:tint="@color/browser_actions_bg_grey"/>

    <!--<Button-->
            <!--android:text="retry"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:id="@+id/retryBtn"-->
            <!--android:layout_marginBottom="56dp"-->
            <!--android:layout_marginStart="45dp" android:layout_alignParentStart="true"/>-->



</RelativeLayout>